void dibujar_conejo() {
    PORTD |= (1<<PD4);
    _delay_ms(5000);
    PORTD &= ~(1<<PD4);
    
    PORTD |= (1<<PD6);
    _delay_ms(5000);
    PORTD &= ~(1<<PD6);
    
    PORTD |= (1<<PD2);
    _delay_ms(100);
    PORTD &= ~(1<<PD2);
    
    PORTD |= (1<<PD3);
    _delay_ms(100);
    PORTD &= ~(1<<PD3);
}

int main(void) {
    UART_init(9600); 
    DDRD = 0xFF;     
    
    while(1) {
        menu();
        char opcion = UART_receive();
        
        switch (opcion) {
            case '1':
                dibujar_triangulo();
    UART_send_cadena("Figura dibujada correctamente!\n");
                break;
            case '2':
                dibujar_circulo();
    UART_send_cadena("Figura dibujada correctamente!\n");
                break;
            case '3':
                dibujar_cruz();
    UART_send_cadena("Figura dibujada correctamente!\n");
                break;
      case '4':
          dibujar_perro();
          UART_send_cadena("Figura dibujada correctamente!\n");
      default:
                UART_send_cadena("Opcion invalida\n");
        }
         
    }
}
